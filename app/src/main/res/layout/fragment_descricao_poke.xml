<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Activity.DescricaoPokeFragment">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

        <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_width="0dp"
                android:layout_height="162dp"
                android:id="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/textViewNameDescricao" app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="16dp"/>
        <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/textViewAltura" app:layout_constraintEnd_toEndOf="@+id/textViewNameDescricao"
                app:layout_constraintTop_toBottomOf="@+id/textViewNameDescricao" app:layout_constraintStart_toStartOf="@+id/textViewNameDescricao"
                android:layout_marginTop="16dp"/>
        <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPeso" app:layout_constraintEnd_toEndOf="@+id/textViewAltura"
                app:layout_constraintStart_toStartOf="@+id/textViewAltura"
                app:layout_constraintTop_toBottomOf="@+id/textViewAltura" android:layout_marginTop="16dp"/>
        <Button
                android:text="Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDescricao" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textViewPeso"
                app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.91"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>