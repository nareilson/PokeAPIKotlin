<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Activity.PrimeiroFragment">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
        <Button
                android:text="VerLista"
                android:layout_width="0dp"
                android:layout_height="48dp" android:id="@+id/buttonOK"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonIntroRX"/>
        <ImageView
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonOK"/>
        <Button
                android:text="IntroRX"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonIntroRX" app:layout_constraintEnd_toEndOf="@+id/buttonOK" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="@+id/buttonOK"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>